# ================================================================
# VoiceAI India — Backend Environment Variables
# Copy this file → rename to .env → fill in your values
# ================================================================

# ── SERVER ──────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development
SERVER_URL=localhost:3000
FRONTEND_URL=http://localhost:5173

# ── DATABASE (Supabase) ─────────────────────────────────────────
DATABASE_URL=postgresql://postgres:yourpassword@db.your-project.supabase.co:5432/postgres
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJ...

# ── AUTH ────────────────────────────────────────────────────────
JWT_SECRET=change-this-to-a-long-random-secret-min-32-chars

# ── LLM PROVIDER ────────────────────────────────────────────────
# groq = FREE (use first), openai = PAID (switch when Groq credits end)
LLM_PROVIDER=groq

# Groq (free credits) — get key at console.groq.com
GROQ_API_KEY=gsk_...
LLM_MODEL_GROQ=llama-3.1-70b-versatile

# OpenAI (paid fallback) — get key at platform.openai.com
OPENAI_API_KEY=sk-proj-...
LLM_MODEL_OPENAI=gpt-4o-mini

# ── STT PROVIDER ────────────────────────────────────────────────
# sarvam = Indian (recommended, ₹30/hr), google = global (₹120/hr)
STT_PROVIDER=sarvam

# Sarvam AI — signup at sarvam.ai (₹1,000 free credits)
SARVAM_API_KEY=your-sarvam-api-key

# Google Cloud STT (fallback / alternative)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./google-service-account.json
# For Render deployment — paste entire JSON content here
GOOGLE_APPLICATION_CREDENTIALS_JSON=

# ── TTS PROVIDER ────────────────────────────────────────────────
# sarvam = Indian voices (recommended), google = global
TTS_PROVIDER=sarvam
TTS_VOICE_GUJARATI=kavya
TTS_VOICE_HINDI=neha
TTS_VOICE_ENGLISH=amelia

# ── TELEPHONY ───────────────────────────────────────────────────
# Primary telephony provider
TELEPHONY_PROVIDER=vobiz

VOBIZ_API_KEY=your-vobiz-api-key
VOBIZ_API_URL=https://api.vobiz.in/v1

# Exotel backup
EXOTEL_SID=your-exotel-sid
EXOTEL_TOKEN=your-exotel-token
EXOTEL_SUBDOMAIN=yourcompany.exotel.com

# ── GOOGLE SHEETS ────────────────────────────────────────────────
GOOGLE_SHEETS_CLIENT_ID=your-oauth-client-id
GOOGLE_SHEETS_CLIENT_SECRET=your-oauth-client-secret
GOOGLE_SHEETS_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ── CALLING RULES ───────────────────────────────────────────────
HUMAN_AGENT_NUMBER=+919876543210
MAX_CONCURRENT_CALLS=5

